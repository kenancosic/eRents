{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=eRentsDB;Integrated Security=true;TrustServerCertificate=true;"
  },

  "ApiSettings": {
    "BaseUrl": "http://localhost:5000",
    "Version": "v1"
  },

  "RabbitMQ": {
    "HostName": "localhost",
    "Port": 5672,
    "UserName": "guest",
    "Password": "guest",
    "Queues": {
      "EmailQueue": "email_notifications",
      "BookingQueue": "booking_updates",
      "ChatQueue": "chat_messages"
    }
  },

  "Jwt": {
    "Key": "your-super-secret-key-for-development-only-minimum-256-bits",
    "Issuer": "eRents",
    "Audience": "eRents-Users"
  },

  "JwtSettings": {
    "SecretKey": "your-super-secret-key-for-development-only-minimum-256-bits",
    "Issuer": "eRents",
    "Audience": "eRents-Users",
    "AccessTokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 30
  },

  "CorsSettings": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:5000"
    ],
    "AllowedMethods": [
      "GET", "POST", "PUT", "DELETE", "OPTIONS"
    ],
    "AllowedHeaders": [
      "Content-Type", "Authorization", "X-Requested-With"
    ],
    "AllowCredentials": true
  },

  "EmailSettings": {
    "SmtpServer": "smtp.gmail.com",
    "SmtpPort": 587,
    "EnableSsl": true,
    "Username": "test@erents.com",
    "Password": "test-password",
    "FromEmail": "noreply@erents.com",
    "FromName": "eRents",
    "EnableEmailSending": false
  },

  "PayPalSettings": {
    "ClientId": "your-paypal-client-id",
    "ClientSecret": "your-paypal-client-secret",
    "Mode": "sandbox"
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },

  "FeatureFlags": {
    "EnableSwagger": true,
    "EnableDetailedErrors": true
  },

  "BusinessSettings": {
    "DefaultPageSize": 10,
    "MaxPageSize": 100,
    "DefaultCurrency": "USD"
  },

  "AllowedHosts": "*"
}
