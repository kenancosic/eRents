    "version": "0.2.0",
    "configurations": [
        {
            "name": "e_rents_mobile",
            "cwd": "e_rents_mobile",
            "request": "launch",
            "type": "dart"
        },
        {
            "name": "e_rents_mobile (profile mode)",
            "cwd": "e_rents_mobile",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "e_rents_mobile (release mode)",
            "cwd": "e_rents_mobile",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        },
        {
            "name": "e_rents_desktop",
            "cwd": "e_rents_desktop",
            "request": "launch",
            "type": "dart"
        },
        {
            "name": "eRents.WebApi",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/eRents.WebApi/bin/Debug/net8.0/eRents.WebApi.dll",
            "args": [],
            "cwd": "${workspaceFolder}/eRents.WebApi",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "eRents.WebApi (Production)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/eRents.WebApi/bin/Debug/net8.0/eRents.WebApi.dll",
            "args": [],
            "cwd": "${workspaceFolder}/eRents.WebApi",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Production",
                "ASPNETCORE_URLS": "https://localhost:5001;http://localhost:5000"
            }
        },
        {
            "name": "eRents.RabbitMQMicroservice",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/eRents.RabbitMQMicroservice/bin/Debug/net8.0/eRents.RabbitMQMicroservice.dll",
            "args": [],
            "cwd": "${workspaceFolder}/eRents.RabbitMQMicroservice",
            "console": "integratedTerminal",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        }
    ],
    "compounds": [
        {
            "name": "Backend + Microservice",
            "configurations": ["eRents.WebApi", "eRents.RabbitMQMicroservice"]
        }
    ]
}